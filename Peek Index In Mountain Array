/** Find peek index of mountain array */

package SearchingAlgorithm;
public class PeekIndexInMountainArray {
    public static void main(String[] args) {
        int[] arr = {0,1,0};
        System.out.println(findPeekIndex(arr));
    }

    static int findPeekIndex(int[] arr){
        int n = arr.length;
        int st = 0, end = n-1;
        int ans = -1;
        while (st <= end){
            int mid = st + (end - st)/2;
            if (arr[mid] < arr[mid+1]){
                ans = mid+1;
                st = mid+1;
            } else {
                end = mid-1;
            }
        }
        return ans;
    }
}
