/** Question -
    Given an array of positive and negative integers,segregate them in 
    linear time and constant space. The output should print all negative numbers, 
    followed by all positive number.
**/
package SortingAlgorithm;
import java.util.Scanner;
public class NegativeAndPositiveSeparate {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter size of array :");
        int size = sc.nextInt();
        int[] arr = new int[size];
        for (int i = 0; i < arr.length; i++) {
            System.out.print("Enter " + i + " index value :");
            arr[i] = sc.nextInt();
        }
        partition(arr);//Method call
        for (int pr : arr){
            System.out.print(pr + " ");
        }
        System.out.println();
    }
    static void partition(int[] arr){
        int l =0, r = arr.length-1;
        while (l < r){
            while (arr[l] < 0) l++;
            while (arr[r] > 0) r--;
            if (l < r){
                int temp = arr[l];
                arr[l] = arr[r];
                arr[r] = temp;
                l++;
                r--;
            }
        }
    }
}
